.contact
	input[type=text], input[type=email], textarea
		width 90%
		font-size 1.5em
		font-family arial
		text-transform uppercase
		outline none

textarea
	padding 10px
	border 1px solid #ccc

input
	&[type=text], &[type=email], &[type=url]
		border none
		padding 10px
		min-width 200px
		border 1px solid #ccc
		margin 4px 0

	&[type=submit], &[type=button]
		background #555
		border none
		cursor pointer
		color #fff
		padding 10px 20px

		&:hover
			background #333
			transition-duration .3s

#cf_custom
	width:100%

	span.wpcf7-not-valid-tip
		left: 70%
		margin-top: 50px
		position: relative
		top: 20%

	div.wpcf7-validation-errors
		margin-top:50px

.cf_custom
	border: 0 none !important 
	outline: 0 none
	display: block
	text-transform: uppercase
	float: left

#cf_name, #cf_email, #cf_dropdown, #cf_message
	color: #111111 !important 
	border: 3px solid white
	font-family:'Trade Gothic Next W01'
	text-transform: uppercase
	font-weight: 900
	margin: 10px
	background-color: #fff !important

#cf_name, #cf_email, #cf_dropdown
	width:270px
	height:30px

#cf_name, #cf_email
	padding:0 10px !important

#cf_email
	margin-right:0px

#cf_dropdown
	padding:4px 0 4px 10px !important
	width:300px
	height:30px

#cf_message
	max-width:940px
	width:940px
	height:340px

#cf_submit
	color:#000
	font-size:45px
	width:160px
	display:block
	position:relative
	left:50%
	margin-left:-80px
	border-radius: 3px

	&:hover
		color:#666
